	// 先判嘤]有sd卡
	public boolean hasSdcard() {
		String status = Environment.getExternalStorageState();
		if (status.equals(Environment.MEDIA_MOUNTED)) {
			return true;
		} else {
			return false;
		}
	}

	// x取assete面的imagegun然後成byte到M
	public static byte[] readtobyte(Context arg3, String arg4) {
		try {
			InputStream v1 = arg3.getAssets().open(arg4);
			byte[] v0_1 = new byte[v1.available()];
			if (v1.read(v0_1) == -1) {
				return null;
			}

			return v0_1;
		} catch (IOException v0) {
			v0.printStackTrace();
		}

		return null;
	}

	// ⒆x取的byte到MDQ成文件
	public static File readtofile(byte[] arg1, File arg2) throws IOException {
		if (arg1 != null) {
			if (!arg2.exists()) {
				try {
					arg2.createNewFile();
				} catch (IOException e) {
					// TODO Auto-generated catch block
					e.printStackTrace();
				}
			}

			FileOutputStream v0 = new FileOutputStream(arg2);
			v0.write(arg1);
			v0.close();
		}

		return arg2;
	}

	// 解密，将chatt解密到texst中
	public static void writetoOtherfile(String arg3, InputStream arg4,
			OutputStream arg5) {
		try {
			SecretKey v0_1 = SecretKeyFactory.getInstance("DES")
					.generateSecret(new DESKeySpec(arg3.getBytes()));
			Cipher v1 = Cipher.getInstance("DES");
			v1.init(2, ((Key) v0_1));
			add(arg4, new CipherOutputStream(arg5, v1));
		} catch (Exception v0) {
			v0.printStackTrace();
		}
	}

	// 进行写操作
	private static void add(InputStream arg3, OutputStream arg4) {
		byte[] v0 = new byte[64];
		try {
			while (true) {
				int v1 = arg3.read(v0);
				if (v1 == -1) {
					break;
				}

				arg4.write(v0, 0, v1);
			}

			arg4.flush();
			arg4.close();
			arg3.close();
			return;
		} catch (IOException v0_1) {
			v0_1.printStackTrace();
			return;
		}
	}

