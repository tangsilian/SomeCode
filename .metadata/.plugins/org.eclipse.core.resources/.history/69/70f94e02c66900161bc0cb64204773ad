package com.droider.hello3;

import java.io.File;
import java.io.IOException;
import java.io.InputStream;

import android.app.Activity;
import android.content.Context;
import android.os.Bundle;
import android.os.Environment;

public class Hello3Activity extends Activity {
	/** Called when the activity is first created. */
	@Override
	public void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		setContentView(R.layout.main);

	}

	// 建文件A和文件的方法
	private void bulidnewfile() {
		// TODO Auto-generated method stub
		// 创建文件夹
		File read = new File("/mnt/sdcard/uzi");
		if (!read.exists()) {
			read.mkdirs();
		}
		// 创建文件
		try {
			new File("/mnt/sdcard/test.txt").createNewFile();
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}

	}

	// 先判嘤]有sd卡
	public boolean hasSdcard() {
		String status = Environment.getExternalStorageState();
		if (status.equals(Environment.MEDIA_MOUNTED)) {
			return true;
		} else {
			return false;
		}
	}

	// x取assete面的imagegun然後成byte到M
	public static byte[] readtobyte(Context arg3, String arg4) {
		try {
			InputStream v1 = arg3.getAssets().open(arg4);
			byte[] v0_1 = new byte[v1.available()];
			if (v1.read(v0_1) == -1) {
				return null;
			}

			return v0_1;
		} catch (IOException v0) {
			v0.printStackTrace();
		}

		return null;
	}

}
